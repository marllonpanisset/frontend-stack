//- logo **********************************************************************************************************************************
mixin logo(name, type)
	if type === undefined
		h1#logo: a(href="/")= name
	else
		span(class="logo-#{type}")&attributes(attributes): a(href="/")= name

mixin lista(type, ...itens)
	ul.lista(class="tp#{type}")
		each item, index in itens
			if type == 2
				li.item
					span.icon
						a(href="#"): img(src="images/icon.png", alt="lorem")
					a(href="#") #{item}
			else if type == 5
				li.item
					a(href="#")
						| #{item}
						span.download
							strong pdf&nbsp;
							| [000MB]
			else if type == 6
				li.item
					if index == 0 || index == 2 || index == 3
						a(href="#", target="_blank") #{item}
					else
						a(href="#") #{item}
			else if type == 7
				li.item
					if index == 0 || index == 2 || index == 3
						a(href="#", target="_blank") #{item}
					else
						a(href="#") #{item}
			else
				li.item
					a(href="#") #{item}
					if type == 4
						ul.lista.tp4
							li.item #{item} 1
							li.item #{item} 2

mixin titulo(type, titulo, titulo2)
	h2(class="titulo-#{type}")&attributes(attributes)
		if type == 1
			span +
			| &nbsp;#{titulo}
		else
			| #{titulo}
			if titulo2
				span #{titulo2}

mixin img(width, height, caption)
	if alidn == undefined
		figure.image&attributes(attributes)
			a(href="#")
				img(src="https://placeimg.com/#{width}/#{height}/#{caption}", alt="lorem")
			if caption
				figcaption #{caption}

//- navegação *****************************************************************************************************************************
mixin nav(id, titulo, ...itens)
	nav(id=id)&attributes(attributes)
		if titulo
			h4.label: span #{titulo}
		ul.options
			each item in itens
				if item == "data"
					li.nav-item.data: a(href="#") #{item}
				else if item == "recomendações"
					li.nav-item.recomendacoes: a(href="#") #{item}
				else
					li.nav-item: a(href="#") #{item}

mixin menu(id, titulo, ...itens)
	nav(id=id)&attributes(attributes)
		if titulo
			h3.titulo: span #{titulo}
		ul.menu
			each item in itens
				if item == "Templates"
					li.has-submenu
						a(href="") #{item}
						ul.submenu
							li
								span.icon
								a(href="parallax.html") Paralax
							li
								span.icon
								a(href="full-width.html") Full Width
				else if item == "Componentes"
					li
						a(href="componentes.html") #{item}
				else
					li: a(href="#")
